@model List<CarDealerDataLayer.Models.Customer>


<div><b>Customer table</b><br /></div>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>First Name </th>
        <th>Last Name </th>
        <th>Age</th>
        <th>Address</th>
        <th>Created</th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.Surname</td>
            <td>@customer.Age</td>
            <td>
                <table>
                    <tr>
                        <td>@customer.Address.Street</td>
                    </tr>
                    <tr>
                        <td>@customer.Address.HouseNumber</td>
                    </tr>
                    <tr>
                        <td>@customer.Address.Town</td>
                    </tr>
                    <tr>
                        <td>@customer.Address.ZipCode</td>
                    </tr>
                    <tr>
                        <td>@customer.Address.Country</td>
                    </tr>
                </table>
            </td>
            <td>@customer.Created</td>
        </tr>

    }
</table>

<a class="btn btn-sm btn-simple" href="@Url.Action("Index", "Customer")">Back</a>